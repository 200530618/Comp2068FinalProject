<%
    let action = "";
    let content = "";
    let resourceType = "";
    let method = "post";

    if (typeof resource !== "undefined") {
        action = `/${resource.id}`;
        content = resource.content;
        resourceType = resource.type;
        method = "put";
    }
%>

<form action="/resources<%= action %>" method="post" enctype="multipart/form-data" class="mt-3">
    <input type="hidden" name="_method" value="<%= method %>">

    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required value="<%= content %>">
    </div>

    <div class="mb-3">
        <label for="year" class="form-label">Year:</label>
        <input type="number" class="form-control" id="year" name="year" required value="<%= content %>">
    </div>

    <div class="mb-3">
        <label for="color" class="form-label">Color:</label>
        <input type="text" class="form-control" id="color" name="color" required value="<%= content %>">
    </div>

    <div class="mb-3">
        <label for="model" class="form-label">Model:</label>
        <input type="text" class="form-control" id="model" name="model" required value="<%= content %>">
    </div>

   

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
