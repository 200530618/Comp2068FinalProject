<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Car List</h1>

    <hr class="my-5">

    <a href="/resources/new">Add a new car</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Model</th>
                <th>Year</th>
                <th>Color</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% if (cars && cars.length > 0) { %>
                <% cars.forEach(({ _id, name, model, year, color, updatedAt }) => { %>
                    <tr>
                        <td><%= name %></td>
                        <td><%= model %></td>
                        <td><%= year %></td>
                        <td><%= color %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/resources/<%= _id %>">view</a> | 
                            <a href="/resources/<%= _id %>/edit">edit</a> | 
                            <form action="/resources/<%= _id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this car?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="standard-link" type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>
